@model DaysForGirls.Web.InputModels.ProductTypeCreateInputModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <style>
        .productType-create-row {
            width: 50%;
            margin-left: 400px;
            position: center;
            border-radius: 5px;
            background-color: #f7f5ed;
            padding: 20px;
        }

        .productType-create-row input[type=text], select {
            width: 50%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .productType-create-row input[type=submit] {
            width: 20%;
            background-color: #cc0052;
            color: white;
            font-size: medium;
            padding: 15px 20px 15px 20px;
            margin: 30px 200px 10px 25px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .productType-create-row input[type=submit]:hover {
            background-color: #a3a375;
        }
    </style>

<h2 style="margin-top: 50px; text-align: center">Create Product Type</h2>

<hr />
<div class="productType-create-row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter the Product Type Name" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
