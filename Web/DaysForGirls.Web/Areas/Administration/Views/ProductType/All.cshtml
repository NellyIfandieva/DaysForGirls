@model IEnumerable<DaysForGirls.Web.ViewModels.ProductTypeDisplayAllViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #all-product-types {
        margin-top: 50px;
    }

    #productType-admin-actions a {
        text-decoration: none;
    }

    table {
        border-collapse: collapse;
        margin-left: 320px;
        width: 50%;
    }

    table, th, td {
        border: 1px solid #ccccb3;
    }

    th {
        font-weight: bold;
        height: 50px;
    }

    td {
        text-align: center;
    }

        td a {
            margin-right: 3px;
        }

    tr:hover {
        background-color: #f5f5f5;
    }

    h2 {
        margin-top: 100px;
        margin-left: 400px;
    }
</style>

@if (Model.Count() > 0)
{
    <div id="all-product-types">
        <h1 class="text-center">All Product Types</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td id="productType-admin-actions">
                            <a href="/Administration/ProductType/Edit/@item.Id">Edit</a>
                            <a href="/Administration/ProductType/Delete/@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h2>No product types to show yet <img src="~/Images/JustFlower-Transperant.png" alt="Days For Girls" width="50" /></h2>
}

