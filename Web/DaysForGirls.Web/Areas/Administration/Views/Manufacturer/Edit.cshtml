@model DaysForGirls.Web.InputModels.ManufacturerEditInputModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .manufacturer-edit-row {
        width: 50%;
        margin-left: 400px;
        position: center;
        border-radius: 5px;
        background-color: #f7f5ed;
        padding: 20px;
    }

    .manufacturer-edit-row input[type=text], select {
        width: 50%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        color: #666666;
    }

    .manufacturer-edit-row input[type=submit] {
        width: 30%;
        background-color: #cc0052;
        color: white;
        font-size: medium;
        padding: 15px 20px 15px 20px;
        margin: 30px 200px 10px 50px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .manufacturer-edit-row input[type=submit]:hover {
            background-color: #a3a375;
        }

    .manufacturer-edit-row input[type=file] {
        width: 50%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    h2{
        margin-top: 50px;
    }
</style>

<h2 class="text-center">Edit the Manufacturer</h2>
<hr />
<div class="manufacturer-edit-row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class=""></label>
                <input asp-for="Name" class="form-control" placeholder="Manufacturer's Name" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class=""></label>
                <input asp-for="Description" class="form-control" placeholder="Manufacturer's Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logo"></label>
                <input type="file" asp-for="Logo" class="" placeholder="Upload Picture" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
