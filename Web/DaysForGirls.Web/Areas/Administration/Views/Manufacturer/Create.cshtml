@model DaysForGirls.Web.InputModels.ManufacturerCreateInputModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <style>
        .row {
            width: 50%;
            margin-left: 400px;
            position: center;
            border-radius: 5px;
            background-color: #f7f5ed;
            padding: 20px;
        }

        input[type=text], select {
            width: 50%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type=submit] {
            width: 20%;
            background-color: #cc0052;
            color: white;
            font-size: medium;
            padding: 15px 20px 15px 20px;
            margin: 30px 200px 10px 50px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color: #a3a375;
            }

            input[type=file] {
            width: 50%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

            h2{
                margin-top: 50px;
            }

