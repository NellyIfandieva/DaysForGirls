@model List<DaysForGirls.Web.ViewModels.CustomerReviewAdminDisplayAllViewModel>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    table {
        border-collapse: collapse;
        /*margin-left: 150px;*/
        width: 100%;
        table-layout: auto;
        margin-top: 50px;
    }

    table, th, td {
        border: 1px solid #ccccb3;
    }

    th {
        font-weight: bold;
        height: 50px;
    }

    td {
        text-align: center;
    }

        td a {
            margin-right: 3px;
        }

    tr:nth-child(even) {
        background-color: #ebebe0;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>

@if (Model.Count() > 0)
{
    <h1>All Customer Reviews</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Author Username</th>
                <th>Author Id</th>
                <th>Created On</th>
                <th>Title</th>
                <th>Text</th>
                <th>To Product</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthorUsername)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthorId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductId)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 style="margin-top: 50px; margin-left: 350px">No Reviews To Show yet <img src="~/Images/JustFlower-Transperant.png" width="50" /></h2>
}

