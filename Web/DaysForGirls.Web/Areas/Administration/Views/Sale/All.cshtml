@model List<DaysForGirls.Web.ViewModels.SalesAllDisplayViewModelAdmin>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    table {
  border-collapse: collapse;
  /*margin-left: 150px;*/
  table-layout: auto;
  width: 100%;
}

table, th, td {
  border: 1px solid #ccccb3;
}

th{
    font-weight: bold;
    height: 50px;
}

td{
    text-align: center;
}

td a{
    margin-right: 3px;
    text-decoration: none;
}

tr:nth-child(even) {background-color: #ebebe0;}

tr:hover {background-color: #f5f5f5;}

#sale-image img {
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 5px;
  width: 150px;
}

#sale-image img:hover {
  box-shadow: 0 0 2px 1px rgba(0, 140, 186, 0.5);
}

h2{
    margin-top: 50px;
    margin-bottom: 40px;
}
</style>

<h2 class="text-center">All Sales &ndash; Administration View</h2>
<div style="overflow-x:auto;">
    <table class="table">
        <thead>
            <tr>
                <th>
                    No.
                </th>
                <th>
                    Id
                    @*@Html.DisplayNameFor(model => model.Id)*@
                </th>
                <th>
                    Title
                    @*@Html.DisplayNameFor(model => model.Title)*@
                </th>
                <th>
                    Ends On
                    @*@Html.DisplayNameFor(model => model.EndsOn)*@
                </th>
                <th>
                    Picture
                    @*@Html.DisplayNameFor(model => model.Picture)*@
                </th>
                <th>
                    Active
                    @*@Html.DisplayNameFor(model => model.IsActive)*@
                </th>
                <th>
                    Number<br />of<br />Products
                    @*@Html.DisplayNameFor(model => model.ProductsCount)*@
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i <Model.Count(); i++)
            {
                int count = i + 1;
            <tr>
                <td>
                    @count
                </td>
                <td>
                    <h6>@Model[i].Id</h6>
                    @*@Html.DisplayFor(modelItem => item[i].Id)*@
                </td>
                <td>
                    <h6>@Model[i].Title</h6>
                    @*@Html.DisplayFor(modelItem => item.Title)*@
                </td>
                <td>
                    <h6>@Model[i].EndsOn</h6>
                    @*@Html.DisplayFor(modelItem => item.EndsOn)*@
                </td>
                <td id="sale-image">
                    <img src="@Model[i].Picture" alt="@Model[i].Title" width="100" height="100" />
                    @*@Html.DisplayFor(modelItem => item.Picture)*@
                </td>
                <td>
                    @if(Model[i].IsActive)
                    {
                        <h6>Yes</h6>
                    }
                    else
                    {
                        <h6>No</h6>
                    }
                    @*@Html.DisplayFor(modelItem => item.IsActive)*@
                </td>
                <td>
                    <h6>@Model[i].ProductsCount</h6>
                    @*@Html.DisplayFor(modelItem => item.ProductsCount)*@
                </td>
                <td>
                    <a href="/Administration/Sale/Edit/@Model[i].Id">Edit</a>
            <a href="/Administration/Sale/Details/@Model[i].Id">Details</a>
            <a href="/Administration/Sale/Delete/@Model[i].Id">Delete</a>
                    @*@Html.ActionLink("Edit", "Edit", new { @Model[i].Id })<br/>
                    @Html.ActionLink("Details", "Details", new { @Model[i].Id })<br />
                    @Html.ActionLink("Delete", "Delete", new { @Model[i].Id })*@
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>