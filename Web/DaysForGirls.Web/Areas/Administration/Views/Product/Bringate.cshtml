@using DaysForGirls.Web.ViewModels
@model DaysForGirls.Web.InputModels.ProductCreateInputModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ProductCreateInputModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductType" class="control-label"></label>
                <select class="form-control" asp-for="ProductType">
                    <option selected disabled>...Select Product Type...</option>
                    @foreach (var type in (IEnumerable<ProductCreateProductTypeViewModel>)this.ViewData["productTypes"])
                    {
                        <option value="@type.Name">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select class="form-control" asp-for="Category">
                    <option selected disabled>...Select Category...</option>
                    @foreach (var category in (IEnumerable<ProductCreateCategoryViewModel>)this.ViewData["categories"])
                    {
                        <option value="@category.Name">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainPicture" class="control-label"></label>
                <input type="file" asp-for="MainPicture" class="form-control" placeholder="Upload Main Picture" />
                <span asp-validation-for="MainPicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pictures" class="control-label"></label>
                @for (int i = 1; i <= 4; i++)
                {
                    <div>
                        <input type="file" asp-for="Pictures" class="form-control" placeholder="Upload Picture" />
                    </div>
                }
                <span asp-validation-for="Pictures" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input type="text" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Colour" class="control-label"></label>
                <input type="text" asp-for="Colour" class="form-control" />
                <span asp-validation-for="Colour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input type="text" asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" step="any" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <select class="form-control" asp-for="Manufacturer">
                    <option selected disabled>...Select Manufacturer...</option>
                    @foreach (var manufacturer in (IEnumerable<ProductCreateManufacturerViewModel>)this.ViewData["manufacturers"])
                    {
                        <option value="@manufacturer.Name">@manufacturer.Name</option>
                    }
                </select>
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <select class="form-control" asp-for="Quantity">
                    <option selected disabled>...Select Available Quantity...</option>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
