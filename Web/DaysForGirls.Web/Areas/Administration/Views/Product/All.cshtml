@model List<DaysForGirls.Web.ViewModels.AdminDisplayAllViewModel>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #product-holder{
        margin-top: 10px;
        margin-left: 95px;
        display: inline-block;
        float: left;
    }
    #product-holder img{
        width: 30%;
    }
</style>

<h1 class="text-center">All Products - Admin View</h1>

<div>
    @foreach(var product in Model)
    {
        <div id="product-holder">
            <a href="/Administration/Product/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
            @if (product.IsDeleted)
            {
                <h4 style="color: crimson; font-weight: bolder">DELETED</h4>
            }
            @if (product.IsInSale)
            {
                <h4 style="color: crimson; font-weight: bolder">In Sale</h4>
            }
            <div>
                <a href="/Administration/Product/Details/@product.Id"><h4>@product.Name by @product.Manufacturer</h4></a>
                <a href="/Administration/Category/Details/@product.Category"><h4>@product.Category , &euro;@product.Price</h4></a>
            </div>
            <div>
                <a href="/Administration/Product/Edit/@product.Id">Edit Product</a>
                <a href="/Administration/Sale/AddProductToSale/@product.Id">Add Product To Sale</a>
                <a href="/Administration/Product/Delete/@product.Id" style="padding-left: 7px">Delete Product</a>
            </div>
        </div>
    }
</div>
