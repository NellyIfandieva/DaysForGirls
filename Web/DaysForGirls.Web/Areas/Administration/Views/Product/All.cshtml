@model List<DaysForGirls.Web.ViewModels.AdminDisplayAllViewModel>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #all-products-container{
        display: inline-block;
    }

    /*#all-products-container .product-holder-container{
        float: left;
    }*/

    #product-holder{
        margin-top: 10px;
        margin-left: 75px;
        margin-bottom: 10px;
        float: left;
    }
    #product-holder img{
        width: 195px;
        height: 240px;
    }

    #product-function-options{
        padding-bottom: 2px;
    }

    #product-function-options a{
        padding-left: 6px;
    }

    .product-info-holder{
        margin-top: 0;
        padding-top: 0;
        background-color: #ebebe0;
    }

    .product-info-holder h4{
        margin-left: 4px;
        margin-bottom: 2px;
        font-weight: 500;
        font-size: medium; 
    }

    .text-over-image{
        position: relative;
        text-align: center;
        font-weight: bold;
    }

    .text-bottom-right{
        background-color: crimson;
        color: antiquewhite;
        width: 60px;
        position: absolute;
        bottom: 10px;
        right: 0px;
    }
</style>

<h1 class="text-center">All Products - Admin View</h1>

<div id="all-products-container">
    @foreach(var product in Model)
    {
        <div id="product-holder" @*class="product-holder-container"*@>
            @if (product.IsInSale || product.IsDeleted)
            {
                <div class="text-over-image">
                    @if (product.IsInSale)
                    {

                        <img src="@product.Picture" alt="@product.Name" />
                        <a href="/Sale/Details/@product.SaleId"><div class="text-bottom-right">In Sale</div></a>

                    }
                    else
                    {
                        <img src="@product.Picture" alt="@product.Name" />
                        <div class="text-bottom-right">DELETED</div>
                    }
                </div>
            }
            else
            {
                <div>
                    <a href="/Administration/Product/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
                </div>
            }
        <div class="product-info-holder">
            <a href="/Administration/Product/Details/@product.Id"><h4>@product.Name</h4></a>
            <h4 style="margin-top: 1px"> &euro;@product.Price</h4>
            <div id="product-function-options">
                <a href="/Administration/Product/Edit/@product.Id">Edit</a>
                @if (product.IsInSale == false)
                {
                    <a href="/Administration/Sale/AddProductToSale/@product.Id">Add to Sale</a>
                }
                <a href="/Administration/Product/Delete/@product.Id">Delete</a>
            </div>
        </div>
      </div>
     }
</div>
