@using DaysForGirls.Web.ViewModels
@model List<OrderDisplayAllViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<style>
    table {
        border-collapse: collapse;
        /*margin-left: 150px;*/
        width: 100%;
        table-layout: auto;
        margin-top: 50px;
    }

    table, th, td {
        border: 1px solid #ccccb3;
    }

    th {
        font-weight: bold;
        height: 50px;
    }

    td {
        text-align: center;
    }

        td a {
            text-decoration: none;
        }

    #order-products {
        width: 40px;
        height: 20px;
        background-color: #007f99;
        color: white;
        font-size: x-small;
        margin-top: 4px;
        padding: 2px 2px 2px 3px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    h2 {
        margin-top: 50px;
        text-align: center;
    }

    h3{
        margin-top: 50px;
    }

    .empty-list{
        margin-top: 50px;
        text-align: center;
    }
</style>

@if (Model.Count() < 1)
{
    <h3 class="empty-list">You haven't made any orders yet <img src="~/Images/JustFlower-Transperant.png" alt="DaysForGirls" width="50" /></h3>
}
else
{
    <h2>All Orders You've Made</h2>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Id</th>
                <th>Date Issued</th>
                <th>Products</th>
                <th>Total</th>
                <th>Status</th>
                <th>View</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Number</td>
                    <td>@order.Id</td>
                    <td>@order.IssuedOn</td>
                    <td>@order.ProductsInOrder.Count()</td>
                    <td>@order.TotalPrice</td>
                    <td>@order.Status</td>
                    <td><a href="/Orders/Details/@order.Id">Details</a></td>
                </tr>
            }
        </tbody>
    </table>

    <h3 class="text-center">Thank you for choosing us <img src="~/Images/JustFlower-Transperant.png" width="60" /></h3>
}