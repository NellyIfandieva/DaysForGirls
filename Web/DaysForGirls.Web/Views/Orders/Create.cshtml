@using DaysForGirls.Web.ViewModels
@model OrderDisplayViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<style>
    #order-info-holder{
        margin-top: 50px;
        margin-left: 300px;
    }

    h3 h6{
        margin-left: 35px;
        margin-bottom: 0;
    }

    h5{
        margin-top: 40px;
        margin-left: 50px;
    }

    h4{
        margin-left: 100px;
    }

    table {
      border-collapse: collapse;
      margin-top: 50px;
      table-layout: auto;
      width: 100%;
    }

    table, th, td {
      border: 1px solid white;/*#f5f5f0;*/
    }

    th{
        font-weight: bold;
        height: 50px;
    }

    td{
        text-align: center;
    }

    td img{
        padding: 3px;
    }
    td a{
        margin-right: 3px;
    }

    tr:nth-child(even) {background-color: #ebebe0;}

    tr:hover {background-color: #f5f5f5;}
</style>

<div id="order-info-holder">
    <h3>Order No. @Model.Id</h3>
    <h6 class="order-issued-and-status">Issued on: @Model.IssuedOn to @Model.UserFullName</h6>
    <h6 class="order-issued-and-status">Status: @Model.OrderStatus</h6>
</div>
<hr />
    <table class="table">
        <thead>
            <tr>
                <th>Picture</th>
                <th>Name</th>
                <th>Colour</th>
                <th>Size</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderedProducts)
            {
                <tr>
                    <td><img src="@item.ProductPicture" alt="@item.ProductName" width="50" /></td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductColour</td>
                    <td>@item.ProductSize</td>
                    <td>@item.ProductPrice</td>
                    <td>@item.ProductQuantity</td>
                </tr>
            }
        </tbody>
    </table>
    <h5><span style="font-weight: bold">Total:</span> &euro;@Model.TotalPrice payable upon delivery</h5>
<hr />
