@model IEnumerable<ProductSearchResultViewModel>

    <style>
        #all-products-container {
            margin-top: 15px;
            margin-left: 140px;
            display: inline-block;
        }

        .product-pres {
            float: left;
            margin-left: 15px;
            margin-right: 15px;
            margin-bottom: 15px;
            margin-top: 15px;
        }

            .product-pres img {
                width: 195px;
                height: 240px;
                border: 1px solid #ddd;
                border-radius: 4px;
                padding: 5px;
            }

            .product-pres a {
                text-decoration: none;
            }

        .text-over-image {
            position: relative;
            text-align: center;
            font-weight: bold;
        }

        .text-bottom-right, .text-bottom-right-sold-out, .text-bottom-right-in-a-cart {
            background-color: crimson;
            color: antiquewhite;
            position: absolute;
            bottom: 10px;
            right: 0px;
        }

        .text-bottom-right {
            width: 60px;
        }

        .text-bottom-right-sold-out {
            width: 100px;
            background-color: #990033;
        }

        .text-bottom-right-in-a-cart {
            width: 150px;
        }

        .product-info-holder {
            margin-top: 0;
            padding-top: 0;
            background-color: #ebebe0;
        }

            .product-info-holder h4 {
                margin-left: 4px;
                margin-bottom: 2px;
                font-weight: 500;
                font-size: medium;
            }

        img {
            margin-bottom: 0;
        }

        h2, h3{
            margin-top: 50px;
            text-align: center;
        }

        p {
            margin-top: 0px;
            margin-bottom: 0px;
            padding-left: 4px;
        }
    </style>

@if (Model == null)
{
    <h2>You entered no search criteria <img src="~/Images/JustFlower-Transperant.png" alt="DaysForGirls" width="50" /></h2>
}
else if(Model == null)
{
    <h2>No products match your seacrh criteria <img src="~/Images/JustFlower-Transperant.png" alt="DaysForGirls" width="50" /></h2>
}
else
{
    <h3>Your <img src="~/Images/JustFlower-Transperant.png" alt="DaysForGirls" width="50" /> Search Results</h3>
    <div id="all-products-container">
        @foreach (var product in Model)
        {
            <div class="product-pres">
                @if (product.ShoppingCartId != null)
                    {
                        <div class="text-over-image">
                            <a href="/Products/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
                            <div class="text-bottom-right-in-a-cart">Currently in a Cart</div>
                        </div>
                    }
                    else if (product.OrderId != null && product.AvailableItems < 1)
                    {
                        <div class="text-over-image">
                            <a href="/Products/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
                            <div class="text-bottom-right-sold-out">Sold Out</div>
                        </div>
                    }
                    else if (product.SaleId != null)
                    {
                        <div class="text-over-image">
                            <img src="@product.Picture" alt="@product.Name" />
                            <a href="/Sales/Details/@product.SaleId"><div class="text-bottom-right">In Sale</div></a>
                        </div>
                    }
                    else
                    {
                        <a href="/Products/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
                    }
                    <div class="product-info-holder">
                        <a href="/Products/Details/@product.Id"><h4>@product.Name</h4></a>
                        @if (product.SaleId == null)
                        {
                            <p style="margin-top: 1px">&euro;@product.Price</p>
                        }
                        else
                        {
                            <p style="margin-top: 1px">&euro;<strike>@product.Price</strike></p>
                        }
                </div>
            </div>
        }
    </div>
}
