@model List<DisplayAllOfCategoryAndTypeViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #wedding-dresses-container {
        margin-top: 15px;
        margin-left: 140px;
        display: inline-block;
    }

    .wedding-dress-pres {
        float: left;
        margin-left: 15px;
        margin-right: 15px;
        margin-bottom: 15px;
        margin-top: 15px;
    }

        .wedding-dress-pres img {
            width: 195px;
            height: 240px;
        }

        .wedding-dress-pres a {
            text-decoration: none;
        }

    .text-over-image {
        position: relative;
        text-align: center;
        font-weight: bold;
    }

    .text-bottom-right, .text-bottom-right-sold-out, .text-bottom-right-in-a-cart{
        background-color: crimson;
        color: antiquewhite;
        position: absolute;
        bottom: 10px;
        right: 0px;
    }
    .text-bottom-right{
        width: 60px;
    }

    .text-bottom-right-sold-out{
        width: 100px;
    }

    .text-bottom-right-in-a-cart{
        width: 150px;
    }

    .dress-info-holder{
        margin-top: 0;
        padding-top: 0;
        background-color: #ebebe0;
    }

    .dress-info-holder h4{
        margin-left: 4px;
        margin-bottom: 2px;
        font-weight: 500;
        font-size: medium;
    }

    img{
        margin-bottom: 0;
    }

    h1{
        margin-top: 25px;
    }

    p{
        margin-top: 0px;
        margin-bottom: 0px;
        padding-left: 4px;
    }
</style>

<h1 class="text-center">All Wedding Dresses</h1>

<div id="wedding-dresses-container">
    @foreach (var product in Model)
    {
        <div class="wedding-dress-pres">
            @if (product.ShoppingCartId != null)
            {
                <div class="text-over-image">
                    <a href="/Products/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
                    <div class="text-bottom-right-in-a-cart">Currently in a Cart</div>
                </div>
            }
            else if (product.AvailableItems < 1)
            {
                <div class="text-over-image">
                    <img src="@product.Picture" alt="@product.Name" />
                    <div class="text-bottom-right-sold-out">Sold Out</div>
                </div>
            }
            else if (product.SaleId != null)
            {
                <div class="text-over-image">
                    <img src="@product.Picture" alt="@product.Name" />
                    <a href="/Sales/Details/@product.SaleId"><div class="text-bottom-right">In Sale</div></a>
                </div>
            }
            else
            {
                <a href="/Products/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
            }
            <div class="dress-info-holder">
                <a href="/Products/Details/@product.Id"><h4>@product.Name</h4></a>
                @if (product.SaleId == null)
                {
                    <p style="margin-top: 1px">&euro;@product.Price</p>
                }
                else
                {
                    <p style="margin-top: 1px">&euro;<strike>@product.Price</strike></p>
                }
            </div>
        </div>
    }
</div>
