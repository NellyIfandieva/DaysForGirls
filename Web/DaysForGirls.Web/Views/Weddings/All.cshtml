@model List<DisplayAllOfCategoryViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #wedding-products-container {
        margin-top: 15px;
        margin-left: 140px;
        display: inline-block;
    }

    .wedding-product-pres{
        float: left;
        margin-left: 15px;
        margin-right: 15px;
        margin-bottom: 15px;
        margin-top: 15px;
    }

        .wedding-product-pres img{
            width: 195px;
            height: 240px;
        }

        .wedding-product-pres a{
            text-decoration: none;
        }

        .text-over-image{
        position: relative;
        text-align: center;
        font-weight: bold;
    }

    .text-bottom-right{
        background-color: crimson;
        color: antiquewhite;
        width: 60px;
        position: absolute;
        bottom: 10px;
        right: 0px;
    }

    .product-info-holder{
        margin-top: 0;
        padding-top: 0;
        background-color: #ebebe0;
    }

    .product-info-holder h4{
        margin-left: 4px;
        margin-bottom: 2px;
        font-weight: 500;
        font-size: medium;
    }

    img{
        margin-bottom: 0;
    }

    h1{
        margin-top: 25px;
    }

    p{
        margin-top: 0px;
        margin-bottom: 0px;
    }
        
</style>

<h1 class="text-center">All Wedding Products</h1>

<div id="wedding-products-container">
    @foreach (var product in Model)
    {
        <div class="wedding-product-pres">
            @if (product.IsInSale)
            {
                <div class="text-over-image">
                    <img src="@product.Picture" alt="@product.Name" />
                    <a href="/Sales/Details/@product.SaleId"><div class="text-bottom-right">In Sale</div></a>
                </div>
            }
            else
            {
                <div>
                    <a href="/Products/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
                </div>
            }
        <div class="product-info-holder">
            <a href="/Products/Details/@product.Id"><h4>@product.Name</h4></a>
            @if (product.IsInSale == false)
            {
                <p style="margin-top: 1px">&euro;@product.Price</p>
            }
            else
            {
                <p style="margin-top: 1px">&euro;<strike>@product.Price</strike></p>
            }
        </div>
        </div>
    }
</div>
