@model List<DisplayAllOfCategoryViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #other-products-container {
        margin-top: 15px;
        margin-left: 140px;
        display: inline-block;
    }

    .other-product-pres {
        float: left;
        margin-left: 15px;
        margin-right: 15px;
        margin-bottom: 15px;
        margin-top: 15px;
    }

        .other-product-pres img {
            width: 195px;
            height: 240px;
        }

        .other-product-pres a {
            text-decoration: none;
        }

    .text-over-image {
        position: relative;
        text-align: center;
        font-weight: bold;
    }

    .text-bottom-right {
        background-color: crimson;
        color: antiquewhite;
        width: 60px;
        position: absolute;
        bottom: 10px;
        right: 0px;
    }

    .product-info-holder {
        margin-top: 0;
        padding-top: 0;
        background-color: #ebebe0;
    }

        .product-info-holder h4 {
            margin-left: 4px;
            margin-bottom: 2px;
            font-weight: 500;
            font-size: medium;
        }

    img {
        margin-bottom: 0;
    }

    h1 {
        margin-top: 25px;
    }

    p {
        margin-top: 0px;
        margin-bottom: 0px;
    }
</style>

<h1 class="text-center">All Special Occasion Products</h1>

<div id="other-products-container">
    @foreach (var product in Model)
    {
        <div class="other-product-pres">
            @if (product.IsInSale)
            {
                <div class="text-over-image">
                    <img src="@product.Picture" alt="@product.Name" />
                    <a href="/Sales/Details/@product.SaleId"><div class="text-bottom-right">In Sale</div></a>
                </div>
            }
            else
            {
                <div>
                    <a href="/Products/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
                </div>
            }
            <div class="product-info-holder">
                <a href="/Products/Details/@product.Id"><h4>@product.Name</h4></a>
                <h4 style="margin-top: 1px"> &euro;@product.Price</h4>
            </div>
        </div>
    }
</div>
