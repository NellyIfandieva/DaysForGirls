@model List<DisplayAllOfCategoryViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #prom-product-pres {
        margin-top: 10px;
        margin-left: 95px;
        display: inline-block;
        float: left;
    }

        #prom-product-pres img {
            width: 30%;
        }
</style>

<h1 class="text-center">Clothing and Accessories for Special Occasions</h1>

<div>
    @foreach (var product in Model)
    {
        <div id="product-pres">
            <a href="/Products/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
            <p class="text-primary text-center mt-3">@product.Name</p>
            <p class="text-primary text-center mt-3">Price: &euro;@product.Price</p>
        </div>
    }
</div>
