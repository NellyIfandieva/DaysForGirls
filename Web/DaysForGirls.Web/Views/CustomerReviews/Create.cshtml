@model  CustomerReviewInputModel

<style>
    .review-row{
        margin-top: 50px;
        margin-left: 400px;
    }
    .review-row button {
            width: 20%;
            background-color: #cc0052;
            color: white;
            font-size: medium;
            padding: 15px 20px 15px 20px;
            margin: 30px 200px 10px 50px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
</style>

<div class="review-row" style="margin-top:50px">
    <h2>Add Your Review for @this.ViewData["productName"]</h2>
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input type="text" asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input type="text" asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <a href="/CustomerReviews/Create/@Model.ProductId"><button>Add Review</button></a>
            @*<div class="form-group">
                <input type="hidden" id="productId" name="ProductId" value="@this.ViewData["productId"]">
                <input type="submit" value="Add Review" class="btn btn-primary" />
            </div>*@
        </form>
    </div>
</div>
