@using DaysForGirls.Web.ViewModels
@model ShoppingCartDisplayViewModel

<style>
    table {
        border-collapse: collapse;
        /*margin-left: 150px;*/
        width: 100%;
        table-layout: auto;
        margin-top: 50px;
    }

    table, th, td {
        border: 1px solid #ccccb3;
    }

    th {
        font-weight: bold;
        height: 50px;
    }

    td {
        text-align: center;
    }

        td a {
            text-decoration: none;
        }

    #cart-actions {
        display: inline-block;
        margin-left: 400px;
    }

        #cart-actions a button {
            float: left;
            margin-right: 10px;
        }

    #row-total {
        height: 50px;
    }

    #button-one {
        margin: 10px 200px 25px 10px;
    }

    #button-two {
        margin: 10px 10px 25px 10px;
    }

    #button-three{
        margin: 10px 500px 25px 10px;
    }

    .cart-button {
        width: 200px;
        background-color: #007f99;
        color: white;
        font-size: medium;
        padding: 15px 20px 15px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    h2{
        margin-top: 40px;
    }
</style>

@if (Model.Items.Count() < 1)
{
    <h2 class="text-center">Your Shopping Cart is currently empty</h2>
    <a href="/Products/All"><button id="button-three" class="cart-button">Browse All Products</button></a>
}
else
{
    <h2 class="text-center">Your Shopping Cart</h2>

    <div style="overflow-x:auto">
        <table class="table">
            <thead>
                <tr>
                    <th>Picture</th>
                    <th>Name</th>
                    <th>Colour</th>
                    <th>Size</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td><img src="@item.Product.Picture" width="50" /></td>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Colour</td>
                        <td>@item.Product.Size</td>
                        <td>@item.Product.Price</td>
                        <td><a href="/ShoppingCarts/RemoveItem/@item.Id">Remove Item</a></td>
                    </tr>
                }
                <tr id="row-total">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td style="text-align:right">Total: </td>
                    <td>&euro;@Model.Total</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
    <p></p>
    <div id="cart-actions">
        <a href="/Orders/Create/@Model.UserId"><button id="button-one" class="cart-button">Check-Out</button></a>
        <a href="/Products/All"><button id="button-two" class="cart-button">Continue Shopping</button></a>
    </div>
}