@model List<SaleDisplayAllViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    img{
        width: 40%;
    }
</style>

<div>
    <h1 class="text-center">Enjoy Our Latest Sales</h1>
</div>

<div class="container-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
    <div>
        <a href="/Sales/Details/@Model[i].Id"><img src="@Model[i].Picture" alt="@Model[i].Title" /></a>
        <div class="text-block">
            <h2>@Model[i].Title</h2>
            <p>Ends on @Model[i].EndsOn.DayOfWeek, @Model[i].EndsOn.Day-@Model[i].EndsOn.Month-@Model[i].EndsOn.Year</p>
        </div>
    </div>
    }
</div>

