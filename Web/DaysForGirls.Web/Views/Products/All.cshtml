@model List<ProductDisplayAllViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #all-products-pres {
        margin-top: 10px;
        margin-left: 95px;
        display: inline-block;
        float: left;
    }

        #all-products-pres img {
            width: 30%;
        }
</style>

<h1 class="text-center">Enjoy All our Products</h1>

<div>
    @foreach (var product in Model)
    {
        <div id="all-products-pres">
            <a href="/Products/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
            <p class="text-primary text-center mt-3">@product.Name</p>
            <p class="text-primary text-center mt-3">Price: &euro;@product.Price</p>
        </div>
    }
</div>
