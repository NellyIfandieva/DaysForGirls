<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DaysForGirls</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="~/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/0652279571.js"></script>

    @*#cc0066*@
    @*the go button of the search field #e60073*@
</head>
<body>
    <header> 
        <div class="w3-bar" style="background-color: #c5b358; color: whitesmoke;">
            <a href="/" class="w3-bar-item w3-button"><img src="~/Images/Logo.jpg" alt="DaysForGirls" style="width:100%;max-width:200px" /></a>
            <form method="post" action="display">
                <input type="text" class="w3-bar-item w3-input w3-center" asp-controller="Search" asp-action="Display" placeholder="Search...">
                <a style="background-color: #d0c279; font-size: large; font-weight: 500; margin-top: 8px; height: 39px; border-radius: 5px; padding-top: 8px;" href="/Search/Display/" class="w3-bar-item w3-button">Go</a>
            </form>
            @if (this.User.Identity.IsAuthenticated)
            {
                if (this.User.IsInRole("Admin"))
                {
                    <div id="admin-buttons" style="margin-top: 70px">
                        <div class="w3-dropdown-hover">
                            <a href="/Administration/Product/All"><button class="w3-button" style="background-color: #c5b358; color: white">Product</button></a>
                            <div class="w3-dropdown-content w3-bar-block w3-card-4">
                                <a href="/Administration/Product/Create" class="w3-bar-item w3-button">Create</a>
                            </div>
                        </div>
                        <div class="w3-dropdown-hover">
                            <a href="/Administration/ProductType/All"><button class="w3-button">Product Type</button></a>
                            <div class="w3-dropdown-content w3-bar-block w3-card-4">
                                <a href="/Administration/ProductType/Create" class="w3-bar-item w3-button">Create</a>
                            </div>
                        </div>
                        <div class="w3-dropdown-hover">
                            <a href="/Administration/Category/All"><button class="w3-button">Category</button></a>
                            <div class="w3-dropdown-content w3-bar-block w3-card-4">
                                <a href="/Administration/Category/Create" class="w3-bar-item w3-button">Create</a>
                            </div>
                        </div>
                        <div class="w3-dropdown-hover">
                            <a href="/Administration/Manufacturer/All"><button class="w3-button">Manufacturer</button></a>
                            <div class="w3-dropdown-content w3-bar-block w3-card-4">
                                <a href="/Administration/Manufacturer/Create" class="w3-bar-item w3-button">Create</a>
                            </div>
                        </div>
                        <div class="w3-dropdown-hover">
                            <a href="/Administration/Sale/All"><button class="w3-button">Sale</button></a>
                            <div class="w3-dropdown-content w3-bar-block w3-card-4">
                                <a href="/Administration/Sale/Create" class="w3-bar-item w3-button">Create</a>
                            </div>
                        </div>
                        <div class="w3-dropdown-hover">
                            <a href="/Orders/AllAdmin"><button class="w3-button">Orders</button></a>
                            @*<div class="w3-dropdown-content w3-bar-block w3-card-4">
                            <a href="/Administration/Sale/Create" class="w3-bar-item w3-button">Create</a>
                        </div>*@
                        </div>
                    </div>
                }
                <a href="/ShoppingCarts/Display"><button style="background-color: #c5b358; color: whitesmoke; border: none; margin-top: 8px; margin-left: 210px"><i class="fas fa-cart-plus"></i></button></a>
                <a class="w3-bar-item w3-button w3-right" href="/Identity/Account/Manage/Index" @*asp-area="Identity" asp-page="/Account/Manage/Index"*@ title="Manage">Hello, @User.Identity.Name!</a>
                <a class="w3-bar-item w3-button w3-right" href="/Identity/Account/Logout" @*asp-area="Identity" asp-page="/Account/Logout"*@>Logout</a>
            }
            else
            {
                <a class="w3-bar-item w3-button w3-right" asp-area="Identity" asp-page="/Account/Login">Login</a>
                <a class="w3-bar-item w3-button w3-right" asp-area="Identity" asp-page="/Account/Register">Register</a>
            }
        </div>
    </header>
    @*#cc0066*@
    <hr style="margin-top: 1px; margin-bottom: 1px; border: 3px solid white"/>
    <div class="w3-bar" style="background-color: #4e4723; color: white;">
        <div class="w3-dropdown-hover">
            <a href="/Weddings/All"><button class="w3-button" style="background-color: #4e4723; color: whitesmoke; @*#62592c;*@">Wedding</button></a>
            <div class="w3-dropdown-content w3-bar-block w3-card-4">
                <a href="/Weddings/Dresses" class="w3-bar-item w3-button">Dresses</a>
                <a href="/Weddings/Suits" class="w3-bar-item w3-button">Suits</a>
                <a href="/Weddings/Accessories" class="w3-bar-item w3-button">Accessories</a>
            </div>
        </div>
        <div class="w3-dropdown-hover">
            <a href="/Proms/All"><button class="w3-button">Prom</button></a>
            <div class="w3-dropdown-content w3-bar-block w3-card-4">
                <a href="/Proms/Dresses" class="w3-bar-item w3-button">Dresses</a>
                <a href="/Proms/Suits" class="w3-bar-item w3-button">Suits</a>
                <a href="/Proms/Accessories" class="w3-bar-item w3-button">Accessories</a>
            </div>
        </div>
        <div class="w3-dropdown-hover">
            <a href="/Other/All"><button class="w3-button">Other Special Occasions</button></a>
            <div class="w3-dropdown-content w3-bar-block w3-card-4">
                <a href="/Other/Dresses" class="w3-bar-item w3-button">Dresses</a>
                <a href="/Other/Suits" class="w3-bar-item w3-button">Suits</a>
                <a href="/Other/Accessories" class="w3-bar-item w3-button">Accessories</a>
            </div>
        </div>
        @if (this.User.Identity.IsAuthenticated)
        {
            <div class="w3-dropdown-hover" style="margin-left: 755px">
                <a href="/Orders/UserAll/@this.User.Identity.Name"><button class="w3-button">Your Orders</button></a>
            </div>
        }
    </div>
    <div class="w3-container">
        <main>
            @RenderBody()
        </main>
    </div>
    <footer id="footer-info=holer">
        <p id="footer-holder">&copy; Days For Girl Ltd. @DateTime.UtcNow.DayOfWeek, @DateTime.UtcNow.Day-@DateTime.UtcNow.Month-@DateTime.UtcNow.Year</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

    <script src="~/js/site.js" asp-append-version="true">
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>