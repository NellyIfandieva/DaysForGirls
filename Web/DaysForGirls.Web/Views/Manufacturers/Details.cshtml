@using DaysForGirls.Web.ViewModels
@model ManufacturerDetailsViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #logo-and-info-holder{
        display: block;
        margin: 100px 50px 40px 50px;
    }

    #logo-holder{
        float: left;
        width: 30%;
        margin-left: 20px;
        margin-right: 10px;
        border-radius: 6px;
        position: relative;
    }
    #logo-holder img{
        width: 100%;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px;
    }

    #about-holder{
        float: right;
        width: 65%;
        background-color: #ebebe0;
        margin-right: 20px;
        padding: 4px 4px 4px 4px;
        border-radius: 6px;
    }

    #all-products-container {
        margin-top: 15px;
        margin-left: 140px;
        display: inline-block;
    }

    .product-pres {
        float: left;
        margin-left: 15px;
        margin-right: 15px;
        margin-bottom: 15px;
        margin-top: 50px;
    }

        .product-pres img {
            width: 195px;
            height: 240px;
            margin-bottom: 1px;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
        }

        .product-pres a {
            text-decoration: none;
        }

    .text-over-image {
        position: relative;
        text-align: center;
        font-weight: bold;
    }

    .text-bottom-right, .text-bottom-right-sold-out, .text-bottom-right-in-a-cart {
        background-color: crimson;
        color: antiquewhite;
        position: absolute;
        bottom: 10px;
        right: 0px;
    }

    .text-bottom-right {
        width: 60px;
    }

    .text-bottom-right-sold-out {
        width: 100px;
        background-color: #990033;
    }

    .text-bottom-right-in-a-cart {
        width: 150px;
    }

    .product-info-holder {
        margin-top: 0;
        padding-top: 0;
        background-color: #ebebe0;
    }

        .product-info-holder h4 {
            margin-left: 4px;
            margin-bottom: 2px;
            font-weight: 500;
            font-size: medium;
        }

    img {
        margin-bottom: 0;
    }

    h1 {
        margin-top: 25px;
    }

    p {
        margin-top: 0px;
        margin-bottom: 0px;
        padding-left: 4px;
    }
</style>

<div id="logo-and-info-holder">
    <div id="logo-holder"><img src="@Model.Logo" alt="@Model.Name" /></div>
    <div id="about-holder"><p>@Model.Description</p></div>
</div>
<div id="all-products-container">
    <div>
        <h2 style="margin-top: 40px; margin-left: 300px">All Products by @Model.Name</h2>
        <hr />
    </div>
    @foreach (var product in Model.Products)
    {
        <div class="product-pres">
            @if (product.ShoppingCartId != null)
            {
                <div class="text-over-image">
                    <a href="/Products/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
                    <div class="text-bottom-right-in-a-cart">Currently in a Cart</div>
                </div>
            }
            else if (product.OrderId != null && product.AvailableItems < 1)
            {
                <div class="text-over-image">
                    <a href="/Products/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
                    <div class="text-bottom-right-sold-out">Sold Out</div>
                </div>
            }
            else if (product.SaleId != null)
            {
                <div class="text-over-image">
                    <img src="@product.Picture" alt="@product.Name" />
                    <a href="/Sales/Details/@product.SaleId"><div class="text-bottom-right">In Sale</div></a>
                </div>
            }
            else
            {
                <a href="/Products/Details/@product.Id"><img src="@product.Picture" alt="@product.Name" /></a>
            }
            <div class="product-info-holder">
                <a href="/Products/Details/@product.Id"><h4>@product.Name</h4></a>
                @if (product.SaleId == null)
                {
                    <p style="margin-top: 1px">&euro;@product.Price</p>
                }
                else
                {
                    <p style="margin-top: 1px">&euro;<strike>@product.Price</strike> &ndash;30%</p>
                }
            </div>
        </div>
    }
</div>


